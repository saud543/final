@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/AngularCode.js"></script>
<style>
    .btn-space {
        margin-left: 125%;
        background-color: pink;
        font-size: large;
    }



















</style>

<h2 align="center" background:blue>Student Registration Form</h2>
<div ng-app="myApp">
    <div ng-controller="myCtrl" ng-init="GetAllData()" class="divList">
        
        <h4 align="center" bgcolor:blue>Enrolled Students</h4>

        <table cellpadding="20" class="table table-bordered table-hover table-striped">
            <tr>
                <td>
                    <b>Student ID</b>
                </td>
                <td>
                    <b>Student Name</b>
                </td>
                <td>
                    <b>Student Registration Number</b>
                </td>
                <td>
                    <b>Student Semester</b>
                </td>
                <td>
                    <b>Actions</b>
                </td>
            </tr>
            <tr ng-repeat="Emp in employees">
                <td>
                    {{Emp.Emp_Id}}
                </td>
                <td>
                    {{Emp.Emp_Name}}
                </td>
                <td>
                    {{Emp.Emp_City}}
                </td>
                <td>
                    {{Emp.Emp_Age}}
                </td>
                <td>
                    <input type="button" class="btn btn-primary" value="Update" ng-click="UpdateEmp(Emp)" />
                    <input type="button" class="btn btn-sucess" value="Delete" ng-click="DeleteEmp(Emp)" />
                </td>
            </tr>
        </table>




        <div class="form-horizontal" role="form">

            <div class="container">
                <div class="row">
                    <h2>
                        <center bgcolor="black">
                            <span id="spn">Add New Student</span>
                        </center>
                    </h2>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Student Name:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputEmail" placeholder="Name" ng-model="EmpName">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Student Registration Number</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputPassword" placeholder="Student Registration number" ng-model="EmpCity">
                            </div>
                            
                        </div>
                        <br>
                    </div>

                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Student Semeter</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputLabel3" placeholder="Student Semester" ng-model="EmpAge">
                            </div>
                        </div>
                    </div>

                 
                    









                </div>
                <center>
                <div class="row" >
                    <div class="col-sm-6 col-lg-4">
                        <input type="button" id="btnSave" class="form-control btn-space" value="Submit" ng-click="InsertData()" />
                    </div>
                </div>
                    </center>
            </div>
        </div>

    </div>
    @Html.Hidden("EmpID_")

</div>
